@{
    Layout = "Admin/_Layout";
}
@model List<(Category category, int nPizzas)>

<h1 class="fw-bold text-danger">Dashboard Pizzeria</h1>
<div class="d-flex justify-content-between align-items-center mt-5 mb-1 ps-2 pe-4">
    <h2>Elenco Categorie</h2>
    <a class="text-decoration-none" href="@Url.Action("Create", "Category")"><i class="fa-solid fa-plus aggiungi"></i></a>
</div>
@if(Model.Count > 0)
{
    <table class="table align-middle table-hover text-center">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Numero Pizze</th>
                <th scope="col">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach((Category category, int nPizzas) category in Model)
            {
                <tr>
                    <th scope="col">@category.category.Id</th>
                    <td>@category.category.Name</td>
                    <td>@category.nPizzas</td>
                    <td>
                        <a class="btn btn-info" href="@Url.Action("Details", "Category", new { id = category.category.Id})"><i class="fa-solid fa-info text-light fs-5"></i></a>
                        <a class="btn btn-warning" href="@Url.Action("Update","Category", new { id = category.category.Id})"><i class="fa-solid fa-pen-to-square text-light fs-5"></i></a>

                        <form asp-action="Delete" asp-controller="Category" asp-route-id="@category.category.Id" method="post" class="d-inline-block">
                            <button class="btn btn-danger"><i class="fa-solid fa-trash text-light fs-5"></i></button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>



}