@{
    Layout = "Admin/_Layout";
}

@model Pizza
<div class="container">
    <div class="row justify-content-start align-items-start mt-5">
        <div class="col-6">
            <h2 class="fw-bold text-danger">Aggiungi una nuova pizza</h2>
            <form asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div class="my-3">
                    <label class="fs-4 fw-bold form-label">Immagine copertina</label>
                    <input asp-for="Image" type="text" class="form-control" placeholder="Inserire path dell'immagine di copertina" />
                </div>
                <div class="my-3">
                    <label class="fs-4 fw-bold form-label">Nome</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Inserire nome della pizza" />
                </div>
                <div class="my-3">
                    <label class="fs-4 fw-bold form-label">Ingredienti</label>
                    <input asp-for="Description" type="text" class="form-control" placeholder="Inserire ingredienti della pizza" />
                </div>
                <div class="my-3">
                    <label class="fs-4 fw-bold form-label">Prezzo</label>
                    <input asp-for="Price" type="number" class="form-control" placeholder="Inserire prezzo della pizza" />
                </div>
                <div class="my-3">
                    <input type="submit" value="Crea nuova pizza" class="btn btn-success"/>
                </div>
            </form>
        </div>
        <div class="col-6">
            <h2 class="fw-bold text-danger">Recap inserimento nuova pizza</h2>
        </div>
    </div>
</div>